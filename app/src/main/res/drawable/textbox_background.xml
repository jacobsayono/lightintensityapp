<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Border -->
    <stroke
        android:width="2dp"
        android:color="#000000" />

    <!-- Background -->
    <solid android:color="#FFFFFF" />

    <!-- Corners -->
    <corners android:radius="8dp" />

    <!-- Padding -->
    <padding
        android:bottom="8dp"
        android:left="16dp"
        android:right="16dp"
        android:top="8dp" />

</shape>